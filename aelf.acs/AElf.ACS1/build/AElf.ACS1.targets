<?xml version="1.0"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
    </PropertyGroup>
    <PropertyGroup>
        <_ProtoFilePaths>../protobuf/acs1.proto</_ProtoFilePaths>
        <_ProtoFileProtoDir>$(ProjectDir)/Protobuf/base</_ProtoFileProtoDir>
    </PropertyGroup>

    <Target Name="CopyProtoFileToProtoDir" BeforeTargets="CoreCompile;Restore">
        <ItemGroup>
            <ProtoFile Include="$(MSBuildThisFileDirectory)$(_ProtoFilePaths)" />
        </ItemGroup>
        <Copy SourceFiles="@(ProtoFile)" DestinationFolder="$(_ProtoFileProtoDir)" ContinueOnError="false"/>
    </Target>

</Project>
